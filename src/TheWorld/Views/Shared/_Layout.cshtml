@{
  ViewBag.Title = "Home Page";
}

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>The World - @ViewBag.Title</title>
  <link type="text/css" rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <link type="text/css" rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css" />
  <link type="text/css" rel="stylesheet" href="~/lib/Font-Awesome/css/font-awesome.css"/>
  <link type="text/css" rel="stylesheet" href="~/css/style.css" />
</head>
<body>
  <div id="sidebar">
    <div>
      <img src="~/img/user1.png" alt="headshot" class="headshot" />
      <span>Klaus</span>
    </div>
    <ul class="menu">
      <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
      <li><a asp-controller="App" asp-action="About">About</a></li>
      <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
    </ul>
  </div>
  <div id="warpper">
    <div id="main">

      <div>
        <button id="sidebarToggle" class="btn btn-primary">
          <i class="fa fa-angle-left"></i>
        </button>
      </div>

      <div>
        @RenderBody()
      </div>

    </div>

    <div id="footer">
      <p class="text-primary">&copy; The World Ltd</p>
    </div>

  </div>

  <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="~/js/site.js"></script>
  @RenderSection("Scripts",false)
</body>
</html>